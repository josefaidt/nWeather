{
  "version": 2,
  "name": "nWeather",
  "public": false,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@now/node-server",
      "config": { "maxLambdaSize": "20mb", "methods": ["GET", "POST"] }
    }
  ],
  "routes": [{ "src": "/.*", "dest": "src/app.js" }],
  "env": {
    "NODE_ENV": "PRODUCTION",
    "OWM_API_KEY": "@owm-api-key"
  }
}
